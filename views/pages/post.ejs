<script>

function select_category(category){
  var category_selector = document.getElementById("category_selector");
  category_selector.innerHTML = category;
}

var sex_state = "";
function select_sex(change_sex){
  sex_state = change_sex;
  if(sex_state == "MALE"){
    document.getElementById("sex_male_btn").className = "btn btn-primary";
    document.getElementById("sex_female_btn").className = "btn btn-default";
  }
  else {
    document.getElementById("sex_male_btn").className = "btn btn-default";
    document.getElementById("sex_female_btn").className = "btn btn-primary";
  }
}

var age_state = "";
function select_age(change_age){
  age_state = change_age;
  if(age_state == "below 20"){
    document.getElementById("age_below20_btn").className = "btn btn-primary";
    document.getElementById("age_21-30_btn").className = "btn btn-default";
    document.getElementById("age_over30_btn").className = "btn btn-default";
  }
  else if(age_state == "21-30") {
    document.getElementById("age_below20_btn").className = "btn btn-default";
    document.getElementById("age_21-30_btn").className = "btn btn-primary";
    document.getElementById("age_over30_btn").className = "btn btn-default";
  }
  else {
    document.getElementById("age_below20_btn").className = "btn btn-default";
    document.getElementById("age_21-30_btn").className = "btn btn-default";
    document.getElementById("age_over30_btn").className = "btn btn-primary";
  }
}

function demo(){
  select_category("Watch Movies");
